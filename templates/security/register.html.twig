{% extends 'base.html.twig' %}

{% block title %}Register
{% endblock %}

{% block body %}
	<h1>Cr√©ez un compte</h1>

	{{ form_start(registrationForm) }}
	{{ form_row(registrationForm.username, {label: "Nom d'utilisateur : "})}}
	{{ form_row(registrationForm.email, {label: 'Adresse Mail : ', id: 'email'}) }}
	{{ form_row(registrationForm.plainPassword, {label: 'Mot de passe : ', id: 'password'})}}
	{{ form_row(registrationForm.confirm_password, {label: 'Confirmez le mot de passe : ', id: 'confirm_password'}) }}
