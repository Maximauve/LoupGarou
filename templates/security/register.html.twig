{% extends 'base.html.twig' %}

{% block title %}Register
{% endblock %}

{% block body %}
	<h1>Cr√©ez un compte</h1>

	{{ form_start(registrationForm) }}
	{{ form_row(registrationForm.username, {label: "Nom d'utilisateur : "})}}
	{{ form_row(registrationForm.email, {label: 'Adresse Mail : ', id: 'email', 'attr': {'oninput': 'validateEmail(this)'}}) }}
	{{ form_row(registrationForm.plainPassword, {label: 'Mot de passe : ', id: 'password', 'attr': {'oninput': 'validatePassword()'}})}}
	{{ form_row(registrationForm.confirm_password, {label: 'Confirmez le mot de passe : ', id: 'confirm_password', 'attr': {'oninput': 'validatePassword()'}}) }}
	{{ form_row(registrationForm.profilePic) }}
	<span class="text-error" id="error"></span>

	<button type="submit" id="button" class="rounded bg-light-blue disabled:bg-dark-gray" disabled>Register</button>

	{{ form_end(registrationForm) }}
{% endblock %}


{% block javascripts %}
	<script src="/assets/js/register.js"></script>
{% endblock %}
